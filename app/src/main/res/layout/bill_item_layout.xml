<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="3dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_desc"
                android:layout_width="308dp"
                android:layout_height="90dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:minLines="2"
                android:padding="10dp"
                android:text="आम करेला मसाला 200"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_item_unit"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:text="Kg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <TextView
                android:id="@+id/tv_item_id"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="#123"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_item_qty"
                android:layout_width="88dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="1dp"
                android:gravity="center|center_vertical"
                android:paddingLeft="10dp"
                android:text="5"
                android:textColor="#070000"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />

            <TextView
                android:id="@+id/tv_item_rate"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:text="456.89"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_item_unit"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/tv_item_amount"
                android:layout_width="105dp"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:text="4565.88"
                android:textColor="#090000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_item_qty"
                app:layout_constraintStart_toEndOf="@+id/tv_item_rate"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="unit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_desc" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="rate"
                app:layout_constraintEnd_toStartOf="@+id/textView13"
                app:layout_constraintStart_toEndOf="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_desc" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="106dp"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="amount"
                app:layout_constraintEnd_toStartOf="@+id/tv_item_qty"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_desc" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="3dp"
                android:gravity="center"
                android:text="qty"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_id" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>